{% extends 'base.html.twig' %}

{% block title %}Ver Usuarios{% endblock %}

{% block body %}    
    
<div class="example-wrapper2">
    
<table>
    <tr>
	    <th> Rol </th> 	
        <th> ID </th> 	
    	<th> Nombre </th> 	
    	<th> Apellidos </th>
    	<th> Email </th>
    	<th> Acciones </th>

    </tr>

{% for task in tasks %}

	<tr>
	    <td> {{ task.role }} 					</td>
        <td> {{ task.id }} 					</td>
		<td> {{ task.name }} 					</td>
		<td>{{ task.surname }} 					</td>
		<td> {{ task.email }} 					</td>
		<td class="buttons">
		<a href="{{ path('usuarios_ver', {'id':task.id})  }}" class="btn-show">🔎Ver</a> 	
			<a href="{{ path('usuarios_editar', {'id':task.id})  }}" class="btn-show">✏️Editar </a>	<br>	
		<br>	<a href="{{ path('asignar_tarea', {'id':task.id})  }}" class="btn-show">💪Añadir Tarea</a>	
		<a href="{{ path('contactar', {'id':task.id})  }}" class="btn-show">✍Email</a>	<br>	

		<br>	<a href="{{ path('usuarios_editar_contraseña', {'id':task.id})  }}" class="btn-show">🔑Contraseña </a>	<br>	
		<br><a href="{{ path('usuarios_delete', {'id':task.id})  }}" class="btn-delete">❎Eliminar </a>	<br>	

	</tr>
{% endfor %}

    </table>
</div>

{% endblock %}
