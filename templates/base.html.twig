<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />

        {% endblock %}
    </head>
    <body>
    	{%block header%}
   <div id="header">
    		<h1>Tareas</h1>
    		<ul id="menu">
    			<li> <a href="{{ path('tasks') }}">üè†Inicio</a></li>
                {% if app.user %}
                <li ><a  href="{{ path('my_tasks') }}">Mis Tareas</a> </li>

                <li ><a  href="{{ path('task_creation') }}">Crear Tareas</a> </li>
                
                
                
   		{% if app.user.role == 'ROLE_ADMIN'%}
                    <li ><a  href="{{ path('usuarios') }}"> Usuarios</a> </li>
		{%endif%}             
                
                
                
                

                        <li class="right"><a href="{{ path('logout') }}"> Salir</a> </li>              

                <li class="right"><a href="/modificar-perfil/{{app.user.id}}"> Perfil </a> </li>


                {% else %}
                <li> <a href="{{ path('login') }}">Login</a> </li>
                <li> <a href="{{ path('register') }}">Registro</a></li>
                {% endif %}
            



    		</ul>
        {% for message in app.flashes('success') %}
            <div class="mensaje">
                {{ message }}
            </div>
        {% endfor %}
</div>
    	{%endblock%}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

                
    </body>
</html>